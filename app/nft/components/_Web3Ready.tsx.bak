"use client";

import { useEffect, useState } from "react";
import { initWeb3ModalOnce } from "../safe-web3";

declare global {
  interface Window { __WEB3MODAL_INIT__?: boolean }
}

export default function Web3Ready({ children }: { children: React.ReactNode }) {
  const [ready, setReady] = useState(false);

  useEffect(() => {
    let mounted = true;
    (async () => {
      // гарантированно создаём web3modal один раз
      await initWeb3ModalOnce();
      if (mounted) setReady(true);
    })();
    return () => { mounted = false; };
  }, []);

  if (!ready) {
    return (
      <div className="p-6 text-sm opacity-70">
        Loading wallet…
      </div>
    );
  }
  return <>{children}</>;
}

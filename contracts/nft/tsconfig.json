{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": false,
    "types": ["node", "hardhat", "@nomicfoundation/hardhat-verify"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
